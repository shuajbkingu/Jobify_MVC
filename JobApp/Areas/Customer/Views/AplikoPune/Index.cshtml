@{
    ViewData["Title"] = "Apply for a Job";
}


<h2 class="text-dark text-uppercase text-center">Apply for a Job</h2>
@model Aplikimi
<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form asp-action="Apply" method="post">
                <div class="form-floating mb-3 align-items-center ">
                    <label asp-for="Name">Your Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <label asp-for="Email">Your Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Resume" style="padding: 10px;">Upload Your Resume</label>

                    <input asp-for="Resume" type="file" class="form-control-file" style="margin: 30px; padding:5px" />
                    <span asp-validation-for="Resume" class="text-danger"></span>
                </div>
            </form>
        </section>
        <button type="submit" class="w-100 btn btn-dark">Submit Application</button>

        @if (!string.IsNullOrEmpty(ViewBag.ConfirmationMessage))
        {
            <div class="alert alert-success">
                @ViewBag.ConfirmationMessage
            </div>
        }
