@model List<Product> 
<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Shto nje produkt <i class="bi bi-patch-plus"></i>
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>

    <tr>
        <th>Emri Pozites</th>
        <th>Pershkrimi</th>
        <th>Kerkesat</th>
        <th>Kategoria</th>

    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Pershkrimi</td>
                <td>@obj.Kerkesat</td>
                <td></td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                        </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>