@model List<Punet>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Lista e konkurseve</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Punet" asp-action="Create" class="btn btn-primary">
                Shpall konkurs<i class="bi bi-patch-plus"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>Emri</th>
                <th>Përshkrimi</th>
                <th>Kërkesat</th>
                <th>Lokacioni</th>
                <th>Kategoria</th>
                <th>ImageUrl</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>@obj.Kerkesat</td>
                    <td>@obj.Lokacioni</td>
                    <td>@obj.kategoria</td>
                    <td>
                        <img src="/images/@obj.ImageUrl" style="width: 200px; height: 200px;border: 1px solid grey;" />

                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Punet" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Punet" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>